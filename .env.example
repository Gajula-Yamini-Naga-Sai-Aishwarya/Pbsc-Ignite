# .env.example - Template for environment variables
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
MONGO_URI=mongodb://localhost:27017/
DB_NAME=PBSC-Ignite-db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# AI API Keys
# AWS Bedrock Configuration (for Claude Sonnet 4)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Groq API (for fast inference)
GROQ_API_KEY=your-groq-api-key

# Perplexity API (for real-time research)
PERPLEXITY_API_KEY=your-perplexity-api-key

# Google Gemini API (optional, for backward compatibility)
GENMI_API_KEY=your-gemini-api-key

# OpenAI API (optional)
OPENAI_API_KEY=your-openai-api-key

# LinkedIn Integration
# Unipile API for LinkedIn connectivity
UNIPILE_API_KEY=your-unipile-api-key
UNIPILE_BASE_URL=https://api.unipile.com/v1

# Application Settings
MAX_ROADMAP_PHASES=4
DEFAULT_WEEKS_PER_PHASE=4
CACHE_TTL=3600
